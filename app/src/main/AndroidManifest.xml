<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.f433">

    <!-- 添加访问网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <!-- 每创建一个页面都需要在这里注册，格式参考下面主页面的注册 -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 主页面 -->
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name">
        </activity>

        <!-- 登录页面 -->
        <activity
            android:name=".Activities.LoginActivity"
            android:label="@string/app_name">
            <!-- 下面这几句话是控制打开app哪个页面最先显示的，加在谁下面谁就最先显示 -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 吴昶昱页面 -->
        <activity
            android:name=".Activities.Game.GameActivity"
            android:label="@string/app_name">
        </activity>

        <!-- wzx页面 -->
        <activity
            android:name=".Activities.Analysis.AnalysisAcyivity"
            android:label="@string/app_name">
        </activity>

        <!-- 抽屉 - 用户信息页面 -->
        <activity
            android:name=".Activities.UserInfoActivity"
            android:label="@string/app_name">
        </activity>

        <!-- 抽屉 - 设置页面 -->
        <activity
            android:name=".Activities.SettingsActivity"
            android:label="@string/app_name">
        </activity>

        <!-- 抽屉 - 收藏页面 -->
        <activity
            android:name=".Activities.Favorites.FavAvtivity"
            android:label="@string/app_name">
        </activity>

    </application>

</manifest>